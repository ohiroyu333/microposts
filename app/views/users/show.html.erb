<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% end %>
  </div>
</div>

<div class="row">
<div class="col-md-6 col-md-offset-3">
<table class="table table-bordered">
  <tbody>
    <tr>
      <td>メールアドレス</td>
      <td><%= @user.email %></td>
    </tr>
    <tr>
      <td>地域</td>
      <td><%= @user.location %></td>
    </tr>
    <tr>
      <td>URL</td>
      <td><%= @user.URL %></td>
    </tr>
    <tr>
      <td>自己紹介</td>
      <td><%= @user.introduction %></td>
    </tr>
  </tbody>
</table>
</div>
</div>